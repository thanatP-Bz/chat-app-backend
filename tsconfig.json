{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "paths": {
      "*": ["./@types/*", "./*", "../src/@types"]
    }
  },
  "include": ["src/**/*.ts"],

  "exclude": ["node_modules"]
}
